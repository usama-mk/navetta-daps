<svg width="1200" height="800" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="bg" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1e293b;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#334155;stop-opacity:1" />
    </linearGradient>
    <linearGradient id="truck" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#2563eb;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#3b82f6;stop-opacity:1" />
    </linearGradient>
  </defs>
  
  <!-- Background -->
  <rect width="1200" height="800" fill="url(#bg)"/>
  
  <!-- Ground -->
  <rect x="0" y="600" width="1200" height="200" fill="#4ade80" opacity="0.2"/>
  
  <!-- Large dumpster -->
  <rect x="200" y="400" width="200" height="200" fill="#374151" rx="15"/>
  <rect x="220" y="420" width="160" height="160" fill="#6b7280" rx="10"/>
  <rect x="240" y="440" width="120" height="120" fill="#9ca3af" rx="5"/>
  
  <!-- Junk items around dumpster -->
  <rect x="150" y="550" width="30" height="25" fill="#8b5cf6" rx="3"/>
  <rect x="450" y="540" width="35" height="30" fill="#f59e0b" rx="3"/>
  <rect x="500" y="560" width="25" height="20" fill="#ef4444" rx="3"/>
  <rect x="550" y="530" width="40" height="35" fill="#06b6d4" rx="3"/>
  
  <!-- Truck -->
  <rect x="700" y="500" width="300" height="100" fill="url(#truck)" rx="20"/>
  <rect x="720" y="450" width="260" height="60" fill="url(#truck)" rx="30"/>
  
  <!-- Wheels -->
  <circle cx="780" cy="620" r="30" fill="#1f2937"/>
  <circle cx="780" cy="620" r="20" fill="#374151"/>
  <circle cx="920" cy="620" r="30" fill="#1f2937"/>
  <circle cx="920" cy="620" r="20" fill="#374151"/>
  
  <!-- Truck details -->
  <rect x="740" y="460" width="30" height="30" fill="#1e40af" rx="5"/>
  <rect x="800" y="460" width="30" height="30" fill="#1e40af" rx="5"/>
  <rect x="860" y="460" width="30" height="30" fill="#1e40af" rx="5"/>
  
  <!-- Clouds -->
  <ellipse cx="200" cy="150" rx="80" ry="40" fill="white" opacity="0.6"/>
  <ellipse cx="300" cy="120" rx="60" ry="30" fill="white" opacity="0.6"/>
  <ellipse cx="800" cy="180" rx="70" ry="35" fill="white" opacity="0.6"/>
  <ellipse cx="900" cy="150" rx="50" ry="25" fill="white" opacity="0.6"/>
  
  <!-- Sun -->
  <circle cx="1000" cy="100" r="50" fill="#fbbf24" opacity="0.8"/>
  
  <!-- Text overlay -->
  <text x="600" y="200" font-family="Arial, sans-serif" font-size="56" font-weight="bold" fill="white" text-anchor="middle">Professional Junk Removal</text>
  <text x="600" y="250" font-family="Arial, sans-serif" font-size="28" fill="white" text-anchor="middle" opacity="0.9">Same Day Service Available</text>
  <text x="600" y="300" font-family="Arial, sans-serif" font-size="20" fill="white" text-anchor="middle" opacity="0.8">Serving South Holland, Oak Lawn, and Tinley Park</text>
</svg>
